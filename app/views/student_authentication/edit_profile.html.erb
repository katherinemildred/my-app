<div >
  <h5>
    Edit Student Account
  </h5>

  <div>
    <form action="/modify_student" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_student.email %>">
      </div>
      <div>
        <label for="first_name_box">First name</label>
        <input id="first_name_box" name="query_first_name" value="<%= @current_student.first_name %>">
      </div>
      <div>
        <label for="last_name_box">Last name</label>
        <input id="last_name_box" name="query_last_name" value="<%= @current_student.last_name %>">
      </div>
      <div>
        <label for="school_id_box">School</label>
        <input id="school_id_box" name="query_school_id" value="<%= @current_student.school_id %>">
      </div>
      <div>
        <label for="phone_number_box">Phone number</label>
        <input id="phone_number_box" name="query_phone_number" value="<%= @current_student.phone_number %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
